---
import MainLayout from "@/layouts/MainLayout.astro";
import Image from "astro/components/Image.astro";

import avatar from "@/assets/avatar-jessica.jpeg";
---

<MainLayout title="Frontend Mentor | Social Links Profile">
  <section
    class="mx-auto h-[610px] w-96 rounded-xl bg-neutralDarkGrey px-8 py-8"
  >
    <div>
      <Image
        src={avatar}
        alt="Avamar"
        height="80"
        width="80"
        loading={"eager"}
      />
      <div>
        <h1>Jessica Randall</h1>
        <p>London, United Kingdom</p>
        <p>"Front-end developer and avid reader."</p>
      </div>
    </div>

    <div>
      <ul>
        <li>
          <a href="https://www.github.com" target="_blank">GitHub</a>
        </li>
        <li>
          <a href="https://www.frontendmentor.io" target="_blank"
            >Frontend Mentor</a
          >
        </li>
        <li>
          <a href="https://www.linkedin.com" target="_blank">LinkedIn</a>
        </li>
        <li>
          <a href="https://www.x.com" target="_blank">Twitter</a>
        </li>
        <li>
          <a href="https://www.instagram.com" target="_blank">Instagram</a>
        </li>
      </ul>
    </div>
  </section>
</MainLayout>
