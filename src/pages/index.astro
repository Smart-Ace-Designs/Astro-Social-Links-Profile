---
import MainLayout from "@/layouts/MainLayout.astro";
import Image from "astro/components/Image.astro";

import avatar from "@/assets/avatar-jessica.jpeg";
---

<MainLayout title="Frontend Mentor | Social Links Profile">
  <section
    class="mx-auto h-[610px] w-96 rounded-xl bg-neutralDarkGrey px-8 py-10"
  >
    <div>
      <div class="flex justify-center">
        <Image
          src={avatar}
          alt="Avamar"
          loading={"eager"}
          class={"rounded-full w-[86px] mb-6"}
        />
      </div>
      <div class="mb-4">
        <h1 class="mb-2 text-center text-2xl font-semibold">Jessica Randall</h1>
        <p class="mb-6 text-center text-sm text-primaryGreen">
          London, United Kingdom
        </p>
        <p class="text-center text-sm text-gray-300">
          "Front-end developer and avid reader."
        </p>
      </div>
    </div>

    <div>
      <ul>
        <li>
          <a href="https://www.github.com" target="_blank" class="text-sm"
            >GitHub</a
          >
        </li>
        <li>
          <a href="https://www.frontendmentor.io" target="_blank"
            >Frontend Mentor</a
          >
        </li>
        <li>
          <a href="https://www.linkedin.com" target="_blank">LinkedIn</a>
        </li>
        <li>
          <a href="https://www.x.com" target="_blank">Twitter</a>
        </li>
        <li>
          <a href="https://www.instagram.com" target="_blank">Instagram</a>
        </li>
      </ul>
    </div>
  </section>
</MainLayout>
